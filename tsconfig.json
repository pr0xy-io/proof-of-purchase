{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "target": "es2020",
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "./build",
    "resolveJsonModule": true,
    "strict": true,
    "skipLibCheck": true
  },
  "lib": ["es2015"],
  "include": ["test/**/*", "scripts/**/*"],
  "files": ["./hardhat.config.ts"]
}
